node {
    stage('Hello') {
        echo 'Hello World'
    }

    stage('Test JDK') {
        def javaHome = tool 'jdk8'  // 获取 JDK8 的路径
        echo "JAVA_HOME: ${javaHome}"  // 输出 javaHome 变量的值
        withEnv([
                "JAVA_HOME=${javaHome}",
                "PATH=${javaHome}/bin:${env.PATH}"
        ]) {
            sh "java -version"
        }
    }

    stage('Maven Build') {
        def javaHome = tool 'jdk8'
        withEnv([
                "JAVA_HOME=${javaHome}",
                "PATH=${javaHome}/bin:${env.PATH}"
        ]) {
            sh "java -version"
            sh 'mvn clean install'
        }
    }
}
