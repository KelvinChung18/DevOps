pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('test JDK') {
            steps {
                script {
                    def javaHome = tool 'jdk8'  // 获取 JDK8 的路径
                    withEnv(["JAVA_HOME=${javaHome}"]) {
                        sh "java -version"
                    }
                }
            }
        }
    }
}
